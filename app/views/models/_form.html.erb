<div class="row justify-content-lg-center">
 <div class="line-break"></div>
  <%= form_for @model do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-row">
      <div class="form-group col">
        <%= label_tag(:name, "Name") %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col">
        <%= label_tag(:bedrooms, "Bedrooms") %>
        <%= f.text_field :bedrooms, class: 'form-control'%>
      </div>
      <div class="form-group col">
        <%= label_tag(:bathrooms, "Bathrooms") %>
        <%= f.text_field :bathrooms, class: 'form-control' %>
      </div>
      <div class="form-group col">
        <%= label_tag(:sqft, "Sqft") %>
        <%= f.text_field :sqft, class: 'form-control' %>
      </div>
    </div>

    <div class="form-row">
      <%= f.submit "Submit", class: 'form-control btn btn-success' %>
    </div>

  <% end %>

</div>
