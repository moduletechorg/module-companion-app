<!DOCTYPE html>
<html>
  <head>
    <title>Module Companion App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="shortcut icon" href="<%= image_url('favicon.ico') %>" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="<%= root_path %>"><img src="<%= image_url('logo_title.png') %>" height="30"/></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Land', lands_path, class: 'nav-link' %>
          </li>
          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin</a>
                <div class="dropdown-menu">
                  <%= link_to 'Users', users_path, class: 'dropdown-item' %>
                  <%= link_to 'Land Types', land_types_path, class: 'dropdown-item' %>
                  <%= link_to 'Neighborhoods', neighborhoods_path, class: 'dropdown-item' %>
                </div>
              </li>
            <% end %>
            <li><%= link_to 'Edit Profile', edit_user_registration_path(current_user), class: 'nav-link' %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
            <% else %>
              <li><%= link_to 'Login', new_user_session_path, class: 'nav-link' %></li>
            <% end %>
        </ul>
      </div>
    </nav>
    <main>
      <div class="container text-center">
        <% if user_signed_in? && current_user != true_user %>
          <div class="alert alert-light" role="alert">
            You (<%= true_user.email %>) are signed in as <%= current_user.email %>
            <%= link_to "Back to admin", stop_impersonating_users_path, method: :post %>
          </div>
        <% end %>
      </div>
      <% if user_signed_in? && current_user.admin? %>
      <br />
      <div class="container">
        <div class="bg-light admin-console text-center">
          <div class="lead">
            <h5>Admin Options</h5>
            <div>
              <%= yield :admin_console %>
            </div>
          </div>
        </div>
      </div>
      <% end %>

      <br />
      <!-- flash messages -->
      <div class="container">
        <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% end %>
      </div>
      <!-- end flash messages -->

      <%= yield %>
      <br />
      <br />

    </main>

  </body>
</html>
