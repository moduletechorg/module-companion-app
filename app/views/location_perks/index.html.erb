<h1>Location Perks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_perks.each do |location_perk| %>
      <tr>
        <td><%= location_perk.name %></td>
        <td><%= link_to 'Show', location_perk %></td>
        <td><%= link_to 'Edit', edit_location_perk_path(location_perk) %></td>
        <td><%= link_to 'Destroy', location_perk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

