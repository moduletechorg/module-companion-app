<div class="row justify-content-lg-center">
  <% unless @neighborhood.new_record? %>
    <% if @neighborhood.images.attached? %>
    <div class="flex-container-row">
      <% @neighborhood.images.each do |image| %>
        <div class="card delete-neighborhood-image-card">
          <div class="card-img-top">
            <%= image_tag image %>
          </div>
          <div class="card-body text-center">
            <%= link_to "Delete Image", delete_neighborhood_image_path(@neighborhood, image), class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  <% end %>
 <div class="line-break"></div>
  <%= form_for @neighborhood do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-row">
      <div class="form-group col">
        <%= label_tag(:name, "Name") %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-8">
        <%= label_tag(:city, "City") %>
        <%= f.text_field :city, class: 'form-control'%>
      </div>
      <div class="form-group col-4">
        <%= label_tag(:state, "State") %>
        <%= f.select :state, us_states, class: 'form-control' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col">
        <%= label_tag(:description, "Description") %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col">
        <%= label_tag(:images, "Images") %>
        <%= f.file_field :images, multiple: true, direct_upload: true, class: 'form-control-file' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col">
        <%= label_tag(:mapframe, "Google Maps Embedding") %>
        <%= f.text_area :mapframe, class: 'form-control' %>
      </div>
    </div>
    <div class="form-row">
      <%= f.submit "Submit", class: 'form-control btn btn-success' %>
    </div>

  <% end %>

</div>
