<div class="container">

  <div class="row">
    <h2 class="text-center col">Add a Neighborhood</h2>
  </div>

  <hr>

  <div class="row justify-content-lg-center">

    <%= form_for @neighborhood, url: {action: "create"} do |f| %>

      <div class="form-row">
        <div class="form-group">
          <%= label_tag(:name, "Name") %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-8">
          <%= label_tag(:city, "City") %>
          <%= f.text_field :city, class: 'form-control'%>
        </div>
        <div class="form-group col-md-4">
          <%= label_tag(:state, "State") %>
          <%= f.select :state, us_states, class: 'form-control' %>
        </div>
      </div>
      <div class="form-row">
        <%= f.submit "Add", class: 'form-control btn btn-success' %>
      </div>

    <% end %>

  </div>

</div>
