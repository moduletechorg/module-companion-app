<div class="row justify-content-lg-center">

  <%= form_tag '', method: :get do %>

    <div class="form-row">
      <div class="form-group col">
        <%= label_tag 'Neighborhood' %>
        <%= collection_select(:land, :neighborhood_id, Neighborhood.all, :id, :name, {include_blank: ''}, {class: 'form-control'}) %>
      </div>

      <div class="form-group col">
        <%= label_tag 'Land Type' %>
        <%= collection_select(:land, :land_type_id, LandType.all, :id, :name, {include_blank: ''}, {class: 'form-control'}) %>
      </div>

      <%= submit_tag "Filter Lots", class: 'form-control btn btn-warning' %>
    </div>

  <% end %>

</div>
