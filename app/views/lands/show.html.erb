<% content_for :admin_console do %>
  <%= link_to "Edit Land Lot", edit_land_path(@land), class: 'btn btn-warning' %>
  <%= link_to "Remove Land Lot", land_path(@land),
      method: :delete,
      class: 'btn btn-danger' %>
<% end %>

<div class="container">
  <section class="lot-info">
    <div class="double-header text-center">
      <h2 class="title"><%= @land.address %></h2>
      <h3><%= @land.neighborhood.city_state_name %></h3>
    </div>
    <br />
    <div class="container">
      <!-- Begin lot images -->
      <% if @land.images %>
        <div class="lot-info-section">
          <div class="ready-lot-images-container">
            <%= image_tag @land.images.first, class: "lot-info-image" %>
          </div>
        </div>
      <% end %>
      <!-- End lot images -->
      <div class="lot-info-section">
        <div>
          <h3>Location</h3>
          <hr>
          <br />
          <div>
            <b>Neighborhood</b>
            <p><%= @neighborhood.name %></p>
          </div>
          <div>
            <b>Address</b>
            <p><%= @land.address %></p>
          </div>
        </div>
        <div class="lot-blurb">
          <h3>Why We Like It</h3>
          <hr>
          <p><%= @land.why_we_like_it %></p>
        </div>
      </div>
      <div class="lot-info-section">
        <h2>What's Close By</h2>
        <div class="line-break"></div>
        <div>
          <div class="overlay" onclick="style.pointerEvents='none'"></div>
          <% if @land.mapframe %>
             <iframe height="450" width="640" frameborder="0" style="border:0" src=<%= @land.mapframe %> allowfullscreen></iframe>
          <% end %>
        </div>
      </div>
      <div class="lot-info-section">
        <% if @nearby_locations_10 %>
          <div class="locations-nearby">
            <h3>10 minute walk</h3>
            <hr>
            <p>
            <% @nearby_locations_10.each do |loc| %>
              <%= loc.name %><br />
            <% end %>
            <p>
          </div>
        <% end %>
        <% if @nearby_locations_mi %>
          <div class="locations-nearby">
            <h3>Within a mile</h3>
            <hr>

            <p>
            <% @nearby_locations_mi.each do |loc| %>
              <%= loc.name %><br />
            <% end %>
            <p>

          </div>
        <% end %>
      </div>
      <!-- <div class="lot-info-section">
        <div class="row">
          <h2 class="col">What Do You Think?</h2>
        </div>
        <div class="line-break"></div>
        <div class="row">
          <div class="col">
          </div>
        </div>
      </div> -->

    </div>
  </section>
</div>
