<div class="justify-content-lg-center">

  <div class="row">
    <%= render 'shared/delete_images', object: @land %>
  </div>
  <br />
  <br />
  <div class="line-break"></div>
  <%= form_for @land do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="row">
      <div class="form-group col">
        <%= label_tag(:address, 'Address') %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      <div class="form-group col">
        <%= label_tag(:latitude, 'Latitude') %>
        <%= f.text_field :latitude, class: 'form-control' %>
      </div>
      <div class="form-group col">
        <%= label_tag(:longitude, 'Longitude') %>
        <%= f.text_field :longitude, class: 'form-control' %>
      </div>
      <div class="form-group col">
        <%= label_tag(:neighborhood, 'Neighborhood') %>
        <%= f.collection_select(:neighborhood_id, Neighborhood.all, :id, :name, {}, {class: 'form-control'}) %>
      </div>
      <div class="form-group col">
        <%= label_tag(:location_mapframe, 'Location Mapframe URL') %>
        <%= f.text_area :location_mapframe, class: 'form-control', rows: 1 %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col">
        <%= label_tag(:model, 'Model') %>
        <%= f.collection_select(:model_id, Model.all, :id, :name, {}, {class: 'form-control'}) %>
      </div>
      <div class="form-group col">
        <%= label_tag(:pricing, 'Pricing') %>
        <%= f.text_field :pricing, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col form-group">
        <%= label_tag(:images, "Images") %>
        <%= f.file_field :images, multiple: true, class: 'form-control-file' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col">
        <%= label_tag(:why_we_like_it) %>
        <%= f.text_area :why_we_like_it, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col">
        <%= label_tag(:nearby_mapframe, 'Nearby Locations Mapframe URL') %>
        <%= f.text_area :nearby_mapframe, class: 'form-control' %>
      </div>
      <div class="form-group col">
        <%= label_tag "Nearby Locations Within a 10 minute walk" %><br />
        <%= f.text_area :nearby_locations_10, class: 'form-control' %>
      </div>
      <div class="form-group col">
        <%= label_tag "Nearby Locations Within a Mile" %><br />
        <%= f.text_area :nearby_locations_mi, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <%= f.submit "Submit", class: 'form-control btn btn-success' %>
    </div>

  <% end %>

</div>
