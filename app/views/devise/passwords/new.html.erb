<div class="jumbotron container text-center">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'form-group') do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-group' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'form-group btn btn-warning' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
