Invite new user -->

<div class="container">

  <h2 class="text-center">Users</h2>
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <% user_email = user.email %>
        <%= link_to user_email, user_path(user) %>
        <% if user.admin? %>
          <span class="badge badge-primary badge-pill">Admin</span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
