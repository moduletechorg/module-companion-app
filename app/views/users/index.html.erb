<% content_for :admin_console do %>
  <%= link_to "Invite New User", new_user_invitation_path, class: 'btn btn-primary' %>
<% end %>

<div class="container">

  <h2 class="text-center">Users</h2>
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <%= "#{user.first_name} #{user.last_name}" %>
        <% user_email = user.email %>
        <%= link_to user_email, user_path(user) %>
        <% if user.admin? %>
          <span class="badge badge-primary badge-pill">Admin</span>
        <% end %>
        <% if current_user.admin? && current_user != user %>
          <span class="badge badge-warning badge-pill"><%= link_to "Sign in as #{user.email}", impersonate_user_path(user), method: :post %></li></span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
